
<div class="container" style="margin-top:30px">
      <div id="Message" style="margin-bottom:0">
      </div>
      <h2>Signin</h2>
      <h5>Don't have an account: <a href="#myModal" data-target="#myModal" data-toggle="modal" class="MainNavText"
          id="MainNavHelp">Create one</a></h5>
      <div class="modal" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="myModal">User Information</h4>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
              <div class="form-group">
                <div class="form-group">
                  <label>Firstname:</label>
                  <input type="text" class="form-control" id="firstName" placeholder="Enter firstname" name="uFname"
                    required>
                </div>
                <div class="form-group">
                  <label>Lastname:</label>
                  <input type="text" class="form-control" id="lastName" placeholder="Enter lastname" name="uSname" required>
                </div>
                <div class="form-group">
                  <label>Address:</label>
                  <input type="text" class="form-control" id="Address" placeholder="Enter Address" name="uAddress"
                    required>
                </div>
              <div class="form-group">
              <label>Username:</label>
              <input type="text" class="form-control" id="userName" placeholder="Enter username" name="uname" required>
            </div>
            <div class="form-group">
              <label for="pwd">Password:</label>
              <input type="password" class="form-control" id="pswd" placeholder="Enter password" name="pswd" required>
            </div>
            <div class="form-group form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="remember" required> I agree on blabla.
              </label>
            </div>
            <button type="submit" class="btn btn-dark" onclick="registerUser(firstName.value, lastName.value, userName.value, pswd.value, event)">Submit</button>
          </div><br>
        </div>
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
       <div>
          <div class="form-group">
            <label for="uname">Username:</label>
            <input type="text" class="form-control" id="uname" placeholder="Enter username" name="uname" required>
          </div>
          <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd" required>
          </div>
          <div class="form-group form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="checkbox" name="remember" required> I agree on blabla.
            </label>
          </div>
            <button type="submit" class="btn btn-dark" onclick="loginDetailSubmit(uname.value, pwd.value)">Submit</button>
        </div>
      </div>
      </div>
    </div><br><br>
