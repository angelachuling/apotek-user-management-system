<section class="mb-4" style="background: linear-gradient(90deg, #d53369 0%, #daae51 100%); height:500px;">
    <!--Section heading-->
    <br> <br>
    <h1 class="h1-responsive font-weight-bold text-center my-4 text-danger font-weight:900;">Get in touch</h1>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5 text-light">Do you have any questions? Please do not hesitate to
        contact us
        directly. Our team will come back to you within
        a matter of hours to help you.</p>
    <!--Grid column-->
    <div class="container row mb-5 d-flex">
        <form class="col-md-8" id="contact-form" name="contact-form" action="/mailFromContact" method="POST">
            <!--Grid row-->
            <div class="row">
                <!--Grid column-->
                <div class="col-md-12">
                    <div class="md-form mb-0">
                        <input type="text" id="name" name="name" class="form-control">
                        <label for="name" class="">Your name</label>
                    </div>
                    <div class="md-form mb-0">
                        <input type="email" id="email" name="email" class="form-control">
                        <label for="email" class="">Your Email</label>
                    </div>
                    <div class="md-form mb-0">
                        <textarea name="message" id="message" cols="100" rows="10" class="form-control"></textarea>
                        <label for="message" class="">Your Message</label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-info btn-lg btn-block">Submit</button>
        </form>
        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li><i class="fas fa-map-marker-alt fa-2x"></i>
